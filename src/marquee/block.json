{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "storepress/marquee",
	"version": "1.0.0",
	"title": "Marquee",
	"category": "storepress",
	"description": "Marquee block is CSS only animation block to display scrolling text or images horizontally.",
	"attributes": {
		"orientation": {
			"type": "string",
			"default": "x"
		},
		"direction": {
			"type": "string",
			"default": "left"
		},
		"pause": {
			"type": "boolean",
			"default": true
		},
		"animationSpeed": {
			"type": "integer",
			"default": 9
		},
		"gap": {
			"type": "integer",
			"default": 40
		}
	},
	"example": {},
	"supports": {
		"html": false,
		"align": ["wide", "full"]
	},
	"textdomain": "marquee-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript" : "file:./view.js",
	"render": "file:./render.php"
}
